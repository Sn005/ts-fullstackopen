{
  "compilerOptions": {
    "downlevelIteration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedParameters": false,
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
